---
import { Image } from "astro:assets";

import Heading from "../Heading.astro";
import emailLogo from "../../assets/email.svg";
import githubLogo from "../../assets/github.svg";
import linkedinLogo from "../../assets/linkedin.svg";

interface Props {
  email: string;
  linkedin: string;
  github: string;
}

const { email, linkedin, github } = Astro.props;
---

<div id="contact">
  <Heading content="Contact Me" />
  <p id="contact-message">Feel free connect with me or shoot me a message with whatever's on your mind.</p>
  <div id="contact-socials">
    <a href={linkedin} class="contact-social">
      <Image src={linkedinLogo} alt="LinkedIn" class="social-icon" />
      <p>Ahmed Abdelmageed</p>
    </a>
    <a href={github} class="contact-social">
      <Image src={githubLogo} alt="GitHub" class="social-icon" />
      <p>ahmed-mgd</p>
    </a>
    <a href={"mailto: " + email} class="contact-social">
      <Image src={emailLogo} alt="Email" class="social-icon" />
      <p>ahmedg.abdel@gmail.com</p>
    </a>
  </div>
</div>

<style>
  #contact {
    padding: var(--section-padding);
    background-color: rgb(11, 2, 139);
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  #contact h2 {
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  #contact-message {
    margin-bottom: 2rem;
    font-size: 1.2rem;
    line-height: 1.5;
    color: #e0e0e0;
  }

  #contact-socials {
    display: flex;
    justify-content: center;
    gap: 2rem;
    z-index: 1;
    position: relative;
  }

  .contact-social {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: 0.3s, transform 0.3s;
    text-decoration: none;
    color: white;
  }

  .contact-social:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .social-icon {
    width: 24px;
    height: auto;
  }

  @media (max-width: 768px) {
    #contact-socials {
      flex-direction: column;
      gap: 1rem;
    }

    .contact-social {
      justify-content: center;
      padding: 1rem;
      font-size: .85rem;
    }
  }
</style>
