---
import Heading from "../Heading.astro";
import Project from "../Project.astro";
---

<div id="projects">
  <Heading content="Projects" />
  <div id="project-Projects">
    <Project
      title="Battleship"
      body='Web implementation of the classic board game "Battleship."'
      href="https://github.com/ahmed-mgd/battleship"
      tools="JavaScript, Jest"
    />
    <Project
      title="Tic Tac Toe"
      body="Implemented using vanilla JavaScript, emphasizing the module pattern and HTML forms."
      href="https://github.com/ahmed-mgd/tic-tac-toe"
      tools="JavaScript"
    />
    <Project
      title="Weather App"
      body="Application that reports the weather for a given city using WeatherAPI."
      href="https://github.com/ahmed-mgd/weather-app"
      tools="JavaScript"
    />
    <Project
      title="Etch-A-Sketch"
      body="Sketching app using simple DOM manipulation."
      href="https://github.com/ahmed-mgd/etch-a-sketch"
      tools="JavaScript"
    />
    <Project
      title="Presentation App"
      body="Full-stack web app to aggregate peer feedback for student presentations."
      href="https://gitlab.com/academic262833/presentation-app"
      tools="Ruby On Rails, Bootstrap"
    />
    <Project
      title="The Game of Set"
      body='Native application implementing the card game "Set."'
      href="https://gitlab.com/academic262833/set"
      tools="Ruby, GTK"
    />
    <Project
      title="Tag Cloud Generator"
      body="Program that generates a tag cloud from words in a text document."
      href="https://gitlab.com/academic262833/tc-generator"
      tools="Java"
    />
    <Project
      title="RSS News Reader"
      body="Console program that reads an RSS 2.0 feed and organizes information into a webpage."
      href="https://gitlab.com/academic262833/rss"
      tools="Java"
    />
  </div>
</div>

<style>
  #projects {
    padding: var(--section-padding);
  }

  #project-Projects {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }
</style>
