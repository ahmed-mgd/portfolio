---
interface Props {
  title: string;
  body: string;
  href: string;
  tools: string;
}

const { href, title, body, tools } = Astro.props;

const hasLink = href.length > 0;
---

<div class="link-card">
  <a href={href}>
    <h2>
      {title}
      {hasLink && <span>&nearr;</span>}
    </h2>
    <p>
      {body}
    </p>
    <p class="tools">{tools}</p>
  </a>
</div>
<style>
  .link-card {
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(180, 129, 228);
  }
  .tools {
    font-size: 0.9rem;
    font-style: italic;
    padding: 0.9rem 0 0;
  }
</style>
